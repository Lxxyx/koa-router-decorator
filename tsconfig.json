{
    "compilerOptions": {
        "module": "commonjs",
        "target": "es6",
        "noResolve": true,
        "noImplicitAny": false,
        "sourceMap": false,
        "strictNullChecks": false,
        "allowJs": true,
        "pretty": true,
        "experimentalDecorators": true,
        "stripInternal": true,
        "outDir": "./dist"
    },
    "include": [
        "./src/**/*",
        "./test/**/*",
        "./node_modules/ava/**/*.d.ts"
    ]
}